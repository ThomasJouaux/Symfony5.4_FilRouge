
{% extends 'base.html.twig' %}
{# {% block stylesheets %}
<link href="{{asset('../css/style.css')}}" rel="stylesheet">
{% endblock %} #}
{% block body %}
{# breadcrump #}


  <!--Main layout-->
  <main class="my-5">
    <div class="container">
      <!--Section: Content-->
      <section class="text-center text-md-start">
        <h4 class="mb-5"><strong>Nos chaussures :</strong></h4>

        <!-- Post -->
  {% for pro in produit %}
        <div class="row">
          <div class="col-md-4 mb-4">
            <div class="bg-image hover-overlay shadow-1-strong rounded ripple" data-mdb-ripple-color="light">
              <img src="{{ pro.ImgProduit}}" class="img-fluid" width="250" height="300"/>
              <a href="#!">
                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
              </a>
            </div>
          </div>

          <div class="col-md-8 mb-4">
            <h5>{{pro.nomProduit}}</h5>
            <p>
              {{pro.descriptionProduit}}
            </p>

           <a href="/produits/{{ pro.id }}" class="btn btn-primary">En savoir plus</a>
          </div>
        </div>
{% endfor %}
      <!--Section: Content-->


{% endblock %}
